{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "vuejs-documentation",
  "title": "VueJS documentation",
  "description": "Search VueJS documentation (v3)",
  "icon": "vue-icon.png",
  "author": "DavidPascaud",
  "categories": [
    "Documentation"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Documentation",
      "subtitle": "VueJS Docs",
      "description": "Search VueJS documentation from RayCast",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "vueVersion",
      "type": "dropdown",
      "required": true,
      "title": "VueJS version",
      "description": "Specify the VueJS version it will search the docs for.",
      "default": "v3",
      "data": [
        {
          "title": "v3",
          "value": "v3"
        },
        {
          "title": "v2",
          "value": "v2"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.30.1",
    "algoliasearch": "^4.12.2",
    "lodash.groupby": "^4.6.0",
    "striptags": "^3.2.0"
  },
  "devDependencies": {
    "@types/lodash.groupby": "^4.6.6",
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
